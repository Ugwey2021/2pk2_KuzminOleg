<Window x:Class="WpfApp1.NewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="NewFile" Height="157" Width="333">
    <Grid Margin="0,0,0,-6">
        <Label Content="Введите имя файла:" HorizontalAlignment="Left" Margin="17,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="name_file" HorizontalAlignment="Left" Margin="17,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Height="23"/>
        <Button Content="ОК" HorizontalAlignment="Left" Margin="179,86,0,0" VerticalAlignment="Top" Height="22" Width="48" Click="OK_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="232,86,0,0" VerticalAlignment="Top" Height="22" Width="65" Click="Cancel_Click"/>
    </Grid>
</Window>
